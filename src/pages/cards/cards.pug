extends ../../common/pug/page-template

block title
  title Cards

block content
  body.cards.page
    .page__content
      header.ui-kit-header.cards__ui-kit-header
        svg.plain-logo
          use(xlink:href="#plain-logo" )
      .grid.cards__grid
        .row
          .column.column_lg_35p
            .row
              .column.column_md_6.column_lg_12.cards__item
                .search-block.cards__search-block
                  h4.h1.search-block__title Найдём номера под ваши пожелания
                  .date-dropdown.plain-dropdown.search-block__date-dropdown
                    .date-dropdown__fields
                      .date-dropdown__field
                        h4.h3.date-dropdown__title прибытие
                        .input.plain-dropdown__toggle
                          input.input__control.date-dropdown__date(data-date="arrival" placeholder = 'ДД.ММ.ГГГГ' type = 'text')
                          svg.date-dropdown__icon
                            use(href='#expand-more')
                      .date-dropdown__field
                        h4.h3.date-dropdown__title выезд
                        .input.plain-dropdown__toggle
                          input.input__control.date-dropdown__date(data-date="depurture" placeholder = 'ДД.ММ.ГГГГ' type = 'text')
                          svg.date-dropdown__icon
                            use(href='#expand-more')
                    .date-dropdown__content
                      .date-dropdown__calendar.calendar
                        .calendar__datepicker
                        .calendar__buttons
                          button.btn.text-btn.text-btn_dark.calendar__clear-btn(type = 'button')
                            span.btn__text очистить
                          button.btn.text-btn.text-btn_purple.calendar__apply-btn(type = 'button')
                            span.btn__text применить
                  .dropdown-field.search-block__dropdown-field
                    h4.h3.dropdown-field__title гости
                    .items-dropdown.plain-dropdown(data-dropdown-type='guests')
                      .input.plain-dropdown__toggle
                        input.input__control.items-dropdown__control(type = 'text' data-placeholder = 'Сколько гостей' readOnly)
                        svg.items-dropdown__icon
                          use(href='#expand-more')
                      .items-dropdown__content
                        ul.items-dropdown__list
                          li.items-dropdown__item
                            span.items-dropdown__item-name Взрослые
                            .counter.items-dropdown__counter
                              button.btn.round-btn.counter__btn(data-operator = "minus" type='button')
                                span.btn__text.round-btn__text -
                              input.counter__control(type='number' min="0" value="0" name="взрослые")
                              button.btn.round-btn.counter__btn(data-operator = "plus" type='button')
                                span.btn__text.round-btn__text +
                          li.items-dropdown__item
                            span.items-dropdown__item-name Дети
                            .counter.items-dropdown__counter
                              button.btn.round-btn.counter__btn(data-operator = "minus" type='button')
                                span.btn__text.round-btn__text -
                              input.counter__control(type='number' min="0" value="0" name="дети")
                              button.btn.round-btn.counter__btn(data-operator = "plus" type='button')
                                span.btn__text.round-btn__text +
                          li.items-dropdown__item
                            span.items-dropdown__item-name Младенцы
                            .counter.items-dropdown__counter
                              button.btn.round-btn.counter__btn(data-operator = "minus" type='button')
                                span.btn__text.round-btn__text -
                              input.counter__control(type='number' min="0" value="0" name="младенцы")
                              button.btn.round-btn.counter__btn(data-operator = "plus" type='button')
                                span.btn__text.round-btn__text +
                        .items-dropdown__controls
                          button.btn.text-btn.text-btn_dark.items-dropdown__clear-btn(type = 'button')
                            span.btn__text очистить
                          button.btn.text-btn.text-btn_purple.items-dropdown__apply-btn(type = 'button')
                            span.btn__text применить
                  button.btn.btn_width_available.filled-btn.action-btn(type = 'button')
                    span.btn__text Подобрать номер
                    svg.action-btn__icon
                      use(href='#arrow')
              
              .column.column_md_6.column_lg_12.cards__item
                .registration-block
                  h4.h1.registration-block__title Регистрация аккаунта

                  .input.registration-block__name
                    input.input__control(type = 'text' placeholder = 'Имя')

                  .input.registration-block__surname
                    input.input__control(type = 'text' placeholder = 'Фамилия')

                  ul.radio-list.registration-block__gender
