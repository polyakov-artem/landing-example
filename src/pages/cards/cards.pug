                    .input.registration-block__email
                      input.input__control(placeholder = 'Email' type = 'email')

                    .input.registration-block__password
                      input.input__control(placeholder = 'Пароль' type = 'password')


                  label.switch.registration-block__get-offers
                    input.switch__control(type = 'checkbox' autocomplete = 'off' name = 'specials' value ='receive' checked)
                    span.switch__box
                    span.switch__text Получать спецпредложения

                  button.btn.btn_width_available.filled-btn.action-btn.registration-block__pay-btn(type = 'button')
