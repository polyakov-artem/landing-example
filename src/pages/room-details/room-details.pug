extends ../../common/pug/page-template

block title
  title Room details

block content
  body.room-details
    header.header
      nav.header__navbar
        a.header__home-link(href='/')
          svg.logo
            use(xlink:href="#logo")

        .header__menu-content
          ul.header__menu
            li.header__item.header__item_active
              a.header__link(href='/about' title='О нас') О нас
            li.header__item.header__submenu
              a.header__link(href='/serivices' title='Услуги') Услуги
                svg.header__submenu-icon
                  use(href = '#expand-more')
              .header__submenu-content
                .header__submenu-wrap
                  ul.header__submenu-list
                    li.header__submenu-item
                      a.header__link.header__submenu-link(href='#' title='Service 1') Service 1
                    li.header__submenu-item
                      a.header__link.header__submenu-link(href='#' title='Service 2') Service 2
                    li.header__submenu-item
                      a.header__link.header__submenu-link(href='#' title='Service 3') Service 3
            li.header__item
              a.header__link(href='#' title='Вакансии') Вакансии
            li.header__item
              a.header__link(href='#' title='Новости') Новости
            li.header__item.header__submenu
              a.header__link(href='#' title='Соглашения') Соглашения
                svg.header__submenu-icon
                  use(href = '#expand-more')
              .header__submenu-content
                .header__submenu-wrap
                  ul.header__submenu-list
                    li.header__submenu-item
                      a.header__link.header__submenu-link(href='#' title='Соглашение 1') Соглашение 1
                    li.header__submenu-item
                      a.header__link.header__submenu-link(href='#' title='Соглашение 2') Соглашение 2
                    li.header__submenu-item
                      a.header__link.header__submenu-link(href='#' title='Соглашение 3') Соглашение 3
          .header__menu-buttons
            button.btn.edged-btn.header__btn(type = 'button')
              span.btn__text Войти
            button.btn.filled-btn.header__btn(type = 'button')
              span.btn__text Зарегестрироваться

        .header__buttons
          button.btn.edged-btn.header__btn.header__login-btn(type = 'button')
            span.btn__text Войти
          button.btn.filled-btn.header__btn.header__register-btn(type = 'button')
            span.btn__text Зарегестрироваться

        a.header__user(href='#profile')
          span.header__user-name Юлий Цезарь

        button.btn.hamburger.hamburger_type_slider.header__toggler
          span.hamburger__box
            span.hamburger__inner

    main.room-details__main
      section.room-details__pics
        .room-details__pics-row
          .room-details__pics-col.room-details__pics-col_main
            img.room-details__room-photo(src=require('~images/room-details/3.png').default alt='Фото комнаты')
          .room-details__pics-col
            img.room-details__room-photo(src=require('~images/room-details/2.png').default alt='Фото комнаты')
          .room-details__pics-col
            img.room-details__room-photo(src=require('~images/room-details/1.png').default alt='Фото комнаты')
      
      .grid
        .row
          .column.room-details__content
            section.room-details__info
              section.room-details__about
                h2.h2.room-details__title Сведения о номере
                ul.advantages-list
                  li.advantages-list__item
                    .advantage
                      svg.advantage__icon
                        use(xlink:href = '#emoticon')
                      .advantage__text
                        p.advantage__name Комфорт
                        p.advantage__description Шумопоглощающие стены
                  li.advantages-list__item
                    .advantage
                      svg.advantage__icon
                        use(xlink:href = '#city')
                      .advantage__text
                        p.advantage__name Удобство
                        p.advantage__description Окно в каждой из спален
                  li.advantages-list__item
                    .advantage
                      svg.advantage__icon
                        use(xlink:href = '#whatshot')
                      .advantage__text
                        p.advantage__name Уют
                        p.advantage__description Номер оснащен камином
                        
              section.room-details__impressions
                h2.h2.room-details__title Впечатления от номера
                .diagram
                  .diagram__circle-wrap
                    svg.diagram__circle(viewbox='0 0 119 119')
                      circle.diagram__segment-one(cx='50%' cy='50%' r='57.29577951' fill='none' stroke-width='4' stroke-dasharray='88 272' stroke-dashoffset='-1')
                      circle.diagram__segment-two(cx='50%' cy='50%' r='57.29577951' fill='none' stroke-width='4' stroke-dasharray='178 182' stroke-dashoffset='-91')
                      circle.diagram__segment-three(cx='50%' cy='50%' r='57.29577951' fill='none' stroke-width='4' stroke-dasharray='88 272' stroke-dashoffset='-271')
                    p.diagram__text
                      span.diagram__value 260
                      span.diagram__units голосов
                  ul.diagram__legend
                    li.diagram__legend-item Великолепно
                    li.diagram__legend-item Хорошо
                    li.diagram__legend-item Удовлетворительно
                    li.diagram__legend-item Разочарован
            
            section.room-details__comments
              .room-details__comments-header.room-details__title
                h2.h2.room-details__comments-title Отзывы посетителей номера
                span.room-details__comments-counter 2 отзыва

              article.comment.room-details__comment
                header.comment__header
                  img.comment__avatar(src=require('~images/comment/img-1.png').default alt='Аватар')
                  .comment__meta
                    h4.comment__author-name Мурад Сарафанов
                    p.comment__date 5 дней назад
                .comment__content
                  label.like-btn.like-btn_checked.comment__like-btn
                    input.like-btn__control(type='checkbox' checked)
                    span.like-btn__icon
                    span.like-btn__counter 12
                  p.comment__text Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.

              article.comment.room-details__comment
                header.comment__header
                  img.comment__avatar(src=require('~images/comment/img-2.png').default alt='Аватар')
                  .comment__meta
                    h4.comment__author-name Патрисия Стёклышкова
                    p.comment__date Неделю наза
                .comment__content
                  label.like-btn.like-btn_checked.comment__like-btn
                    input.like-btn__control(type='checkbox' checked)
                    span.like-btn__icon
                    span.like-btn__counter 12
                  p.comment__text Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент

            section.room-details__basic-rules
              section.bullet-list.room-details__rules
                h2.h2.bullet-list__title.room-details__rules-title Правила
                ul.bullet-list__list
                  li.bullet-list__item Нельзя с питомцами
                  li.bullet-list__item Без вечеринок и мероприятий
                  li.bullet-list__item Время прибытия — после 13:00, а выезд до 12:00

              section.room-details__cancellation
                h2.h2.room-details__title Отмена
                p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
          
          .column.room-details__side-column
            .booking-block.room-details__booking-block
              .room-info.booking-block__room-info
                span.room-info__number 888
                span.room-info__room-type люкс
                span.room-info__price 9 990₽

              .date-dropdown.plain-dropdown.booking-block__date-dropdown
                .date-dropdown__fields
                  .date-dropdown__field
                    h4.h3.date-dropdown__title прибытие
                    .input.plain-dropdown__toggle
                      input.input__control.date-dropdown__date(data-date="arrival" placeholder = 'ДД.ММ.ГГГГ' type = 'text')
                      svg.date-dropdown__icon
                        use(href='#expand-more')
                  .date-dropdown__field
                    h4.h3.date-dropdown__title выезд
                    .input.plain-dropdown__toggle
                      input.input__control.date-dropdown__date(data-date="depurture" placeholder = 'ДД.ММ.ГГГГ' type = 'text')
                      svg.date-dropdown__icon
                        use(href='#expand-more')
                .date-dropdown__content
                  .date-dropdown__calendar.calendar
                    .calendar__datepicker
                    .calendar__buttons
                      button.btn.text-btn.text-btn_dark.calendar__clear-btn(type = 'button')
                        span.btn__text очистить
                      button.btn.text-btn.text-btn_purple.calendar__apply-btn(type = 'button')
                        span.btn__text применить

              .dropdown-field.booking-block__dropdown-field
                h4.h3.dropdown-field__title гости
                .items-dropdown.plain-dropdown(data-dropdown-type='items')
                  .input.plain-dropdown__toggle
                    input.input__control.items-dropdown__control(type = 'text' data-placeholder = 'Сколько гостей' readOnly)
                    svg.items-dropdown__icon
                      use(href = '#expand-more')
                  .items-dropdown__content
                    ul.items-dropdown__list
                      li.items-dropdown__item
                        span.items-dropdown__item-name Взрослые
                        .counter.items-dropdown__counter
                          button.btn.round-btn.counter__btn(data-operator = "minus" type='button')
                            span.btn__text.round-btn__text -
                          input.counter__control(type='number' min="0" value="3" name="взрослые")
                          button.btn.round-btn.counter__btn(data-operator = "plus" type='button')
                            span.btn__text.round-btn__text +
                      li.items-dropdown__item
                        span.items-dropdown__item-name Дети
                        .counter.items-dropdown__counter
                          button.btn.round-btn.counter__btn(data-operator = "minus" type='button')
                            span.btn__text.round-btn__text -
                          input.counter__control(type='number' min="0" value="0" name="дети")
                          button.btn.round-btn.counter__btn(data-operator = "plus" type='button')
                            span.btn__text.round-btn__text +
                      li.items-dropdown__item
                        span.items-dropdown__item-name Младенцы
                        .counter.items-dropdown__counter
                          button.btn.round-btn.counter__btn(data-operator = "minus" type='button')
                            span.btn__text.round-btn__text -
                          input.counter__control(type='number' min="0" value="0" name="младенцы")
                          button.btn.round-btn.counter__btn(data-operator = "plus" type='button')
                            span.btn__text.round-btn__text +
                    .items-dropdown__controls
                      button.btn.text-btn.text-btn_dark.items-dropdown__clear-btn(type = 'button')
                        span.btn__text очистить
                      button.btn.text-btn.text-btn_purple.items-dropdown__apply-btn(type = 'button')
                        span.btn__text применить

              table.booking-block__price-table
                tfoot.booking-block__table-footer
                  tr.booking-block__sum-row
                    td.booking-block__sum-cell(colspan="2") 
                      span.booking-block__sum-text Итого
                    td.booking-block__sum-value 38 081₽
                tbody.booking-block__table-body
                  tr.booking-block__table-row
                    td.booking-block__name-cell(colspan="2") 9 990₽ х 4 суток
                    td.booking-block__price-cell 39 960₽
                  tr.booking-block__table-row
                    td.booking-block__name-cell Сбор за услуги: скидка 2 179₽
                    td.booking-block__info-cell
                      span.booking-block__info-icon i
                    td.booking-block__price-cell 0₽
                  tr.booking-block__table-row
                    td.booking-block__name-cell Сбор за дополнительные услуги
                    td.booking-block__info-cell
                      i.booking-block__info-icon i
                    td.booking-block__price-cell 300₽
              button.btn.btn_width_available.filled-btn.action-btn(type = 'button')
                span.btn__text забронировать
                svg.action-btn__icon
                  use(href='#arrow')
    
    footer.footer
      .footer__content
        .grid
          .row 
            .column.column_lg_3.footer__logo-section
              a.footer__home-link(href='/')
                svg.logo
                  use(xlink:href="#logo")
              p.footer__description Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
            .column.column_lg_6.footer__links-section
              .row
                .column.column_6.column_sm_4
                  h4.footer__title Навигация
                  ul.footer__list
                    li.footer__item
                      a.footer__link(href='#') О нас
                    li.footer__item
                      a.footer__link(href='#') Новости
                    li.footer__item
                      a.footer__link(href='#') Служба поддержки
                    li.footer__item
                      a.footer__link(href='#') Услуги
                .column.column_6.column_sm_4
                  h4.footer__title О нас
                  ul.footer__list
                    li.footer__item
                      a.footer__link(href='#') О сервисе
                    li.footer__item
                      a.footer__link(href='#') Наша команда
                    li.footer__item
                      a.footer__link(href='#') Вакансии
                    li.footer__item
                      a.footer__link(href='#') Инвесторы
                .column.column_6.column_sm_4
                  h4.footer__title Служба поддержки
                  ul.footer__list
                    li.footer__item
                      a.footer__link(href='#') Соглашение
                    li.footer__item
                      a.footer__link(href='#') Сообщества
                    li.footer__item
                      a.footer__link(href='#') Связь с нами
            .column.column_lg_3.footer__subscribe-section
              h4.footer__title Подписка
              p.footer__subscribe-text Получайте специальные предложения и новости сервиса
              .input.subscription-input.footer__subscription-input
                input.input__control.subscription-input__control(type = 'email' placeholder = 'Email')
                svg.subscription-input__icon
                  use(href='#arrow')
      .footer__copyright
        .footer__copyright-wrap
          p.footer__copyright-text Copyright © 2018 Toxin отель. Все права защищены.
          .social-links.footer__social-links
            a.social-links__item(href='#')
              svg.social-links__icon
                use(xlink:href="#twitter")
            a.social-links__item(href='#')
              svg.social-links__icon
                use(xlink:href="#facebook")
            a.social-links__item(href='#')
              svg.social-links__icon
                use(xlink:href="#instagram")
